    function upload() {

        <!-- 当前表的文件上传 -->

        $('#goodsPhotoupload').fileupload({
            url: baseUrl + 'file/upload',
            headers: {token: window.sessionStorage.getItem("token")},
            dataType: 'json',
            done: function (e, data) {
